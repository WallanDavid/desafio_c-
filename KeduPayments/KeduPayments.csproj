<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- No external packages to keep restore lightweight in this environment -->
  </ItemGroup>

  <PropertyGroup Condition="'$(EnableEf)'=='true'">
    <DefineConstants>$(DefineConstants);USE_EF</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition="'$(EnableEf)'=='true'">
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.22" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="8.0.5" />
  </ItemGroup>

</Project>
